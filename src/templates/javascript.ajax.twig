<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
	<h3 class="modal-title text-center" id="myModalLabel">{{javascript.title}}</h3>
</div>

<div class="modal-body" style="padding-bottom:70px; overflow-y: auto;">
		<div class="col-sm-12 col-lg-6" id="exampleFrameDiv">
			<iframe id="exampleFrame" src="ressources/common/assets/examples/html/empty.html">
			</iframe>
		</div>


  <!-- Nav tabs -->
  	<div class="col-sm-12 col-lg-6">
	 	<ul class="nav nav-tabs" role="tablist">
	    	<li role="presentation">
	    		<a id="htmlTab" href="#htmlEditor" aria-controls="htmEditors" role="tab" data-toggle="tab">
	    		HTML</a></li>
	   		 <li role="presentation">
	   		 	<a  id="cssTab" href="#cssEditor" aria-controls="cssEditor" role="tab" data-toggle="tab">
	   		 	CSS</a></li>
	    	<li role="presentation" >
	    		<a id="javascriptTab" href="#javascriptEditor" aria-controls="javascriptEditor" role="tab" data-toggle="tab">
	    		JavaScript</a></li>
	  	</ul>
		<div class="tab-content">

			<div role="tabpanel" class="tab-pane" id="htmlEditor">
			</div>
			<div role="tabpanel" class="tab-pane" id="cssEditor">
			</div>
			<div role="tabpanel" class="tab-pane" id="javascriptEditor">
			</div>
		</div>
		<div class="text-right">
			<button id="resetButton"
				class="btn-default btn" >
							Réinitialiser
			</button>
			<button id ="runButton" class="btn-primary btn" >
							Éxécuter
			</button>
		</div>
	</div>
	<div class="clearfix">
	</div>
	<div style="margin-left:15px;margin-right:15px;">
	<div id="modalConsignes" class="cours afaire hidden">
		<h4> Consignes </h4>
		<ol class="steps">
		</ol>
	</div>
	</div>
</div>



<div class="modal-footer" style="position:absolute;bottom:0;width:100%;">
	<button type="button" class="btn btn-default" data-dismiss="modal"> Cacher l'éditeur </button>
</div>

<script>
	{% if javascript.fichierConsignes is not empty %}
		$.ajax({
			url:'{{javascript.fichierConsignes}}',
			dataType:'text'
		}).done(function(data){
			$('#modalConsignes').removeClass('hidden');
			$('#modalConsignes ol').html(data);
			$('#modalConsignes  pre code').each(function(i, block) {
    			hljs.highlightBlock(block);
  			});
		});
	{% endif %}

</script>
